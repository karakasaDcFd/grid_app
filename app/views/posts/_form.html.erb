<%= form_for(@post, url: yield(:path), class: "form-horizontal", autocomplete: "off") do |f| %>
    <div class="form-group">
        <% if flash[:error] %>
            <div id="error_explanation">
                <div class="alert alert-danger">
                    <%= flash[:error] %>
                </div>
            </div>
        <% end %>
        <div class="input-group">
            <label class="input-group-btn">
                <span class="btn btn-success">
                    Select File
                    <%= f.file_field :image, class: "form-control", id: "files", style: "display:none" %>
                </span>
            </label>
            <input type="text" class="form-control" id="filename" placeholder="選択されていません" disabled />
        </div>
    </div>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>